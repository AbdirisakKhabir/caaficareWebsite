generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      String
  password  String
  createdAt DateTime @default(now())
}

model Hospital {
  id         Int      @id @default(autoincrement())
  name       String
  address    String
  status     String
  phone      String
  logo       String
  created_at DateTime @default(now())

  doctors Doctor[]
}

model Customer {
  id         Int      @id @default(autoincrement())
  full_name  String
  phone      String
  created_at DateTime @default(now())

  appointments     Appointment[]
  NurseAppointment NurseAppointment[]
}

model Pharmacy {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  phone           String
  ownerName       String
  businessLicense String
  city            String
  district        String
  location        String
  image           String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  products Product[]
  pharmacy Eprescription[]
}

model Order {
  id            Int      @id @default(autoincrement())
  customerName  String
  customerPhone String
  quantity      Int
  totalPrice    String
  created_at    DateTime @default(now())

  product_id Int
  product    Product @relation(fields: [product_id], references: [id], name: "ProductOrders")
}

model Product {
  id         Int      @id @default(autoincrement())
  item_name  String
  price      String
  image      String
  created_at DateTime @default(now())

  pharmacy_id Int
  pharmacy    Pharmacy @relation(fields: [pharmacy_id], references: [id])

  orders Order[] @relation(name: "ProductOrders")
}

model Doctor {
  id                  Int      @id @default(autoincrement())
  name                String
  phone               String
  bio                 String   @db.Text
  type                String?
  job_experience      String
  image               String
  profession          String
  languages           String
  availability_status String   @default("Active")
  card_price          String? //Consultation fee
  appointment_price   String? // Appointment fee
  work_schedule       Json?
  created_at          DateTime @default(now())
  hospital_id         Int
  hospital            Hospital @relation(fields: [hospital_id], references: [id])

  appointments Appointment[]
}

// Use the consolidated Appointment model instead
model Appointment {
  id              Int      @id @default(autoincrement())
  patientName     String
  patientPhone    String
  patientAge      Int?
  patientGender   String?
  appointmentType String // "doctor" or "nurse"
  appointmentDate DateTime
  shift           String
  appointmentTime String
  status          String   @default("Scheduled")
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  notes           String?
  // Relations
  customer_id     Int
  doctor_id       Int?
  nurse_id        Int?
  service_id      Int?

  customer Customer @relation(fields: [customer_id], references: [id])
  doctor   Doctor?  @relation(fields: [doctor_id], references: [id], onDelete: Cascade)
  nurse    Nurse?   @relation(fields: [nurse_id], references: [id], onDelete: Cascade)
  service  Service? @relation(fields: [service_id], references: [id])
}

model Service {
  id          Int      @id @default(autoincrement())
  serviceName String
  price       String
  status      String   @default("Active")
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  appointments     Appointment[]
  NurseAppointment NurseAppointment[]
}

model Nurse {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  phone          String
  bio            String?
  job_experience String?
  contract       String?
  languages      String?
  location       String?
  city           String?
  district       String?
  qualifications String?
  status         String   @default("Pending")
  image          String?
  identity_card  String?
  certificate    String?
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  appointments     Appointment[]
  NurseAppointment NurseAppointment[]
}

model Eprescription {
  id           Int            @id @default(autoincrement())
  patientName  String
  phone        String
  doctor_id    Int
  pharmacy_id  Int
  date         DateTime
  status       String
  prescription Prescription[]
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt

  pharmacy Pharmacy @relation(fields: [pharmacy_id], references: [id])
}

model Prescription {
  id               Int           @id @default(autoincrement())
  eprescription_id Int
  eprescription    Eprescription @relation(fields: [eprescription_id], references: [id], onDelete: Cascade)
  medicineName     String
  quantity         String
  frequency        String
  route            String
  instruction      String
  created_at       DateTime      @default(now())
  updated_at       DateTime      @updatedAt
}

model NurseAppointment {
  id              Int      @id @default(autoincrement())
  patientName     String
  patientPhone    String
  patientAge      Int
  patientGender   String
  appointmentType String
  appointmentDate DateTime
  shift           String
  appointmentTime String
  status          String   @default("Scheduled")
  address         String
  location        String?
  city            String?
  district        String?
  notes           String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  // Relations
  customer_id Int
  customer    Customer @relation(fields: [customer_id], references: [id], onDelete: Cascade)

  nurse_id Int
  nurse    Nurse @relation(fields: [nurse_id], references: [id], onDelete: Cascade)

  // Add service relationship
  service_id Int?
  service    Service? @relation(fields: [service_id], references: [id], onDelete: SetNull)
}
